@page
@model PostApplication.Pages.Packages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Package[0].ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Package[0].Weight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Package[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Package[0].Sender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Package[0].Receiver)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Package[0].AssignedCourier)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Package[0].CreationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Package[0].ExpectedArrival)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Package[0].PostOffice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Package) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sender.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Receiver.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AssignedCourier.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpectedArrival)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostOfficeID)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
