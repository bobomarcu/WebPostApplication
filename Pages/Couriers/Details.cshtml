@page
@model PostApplication.Pages.Couries.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Courier</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Courier.CourierFirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Courier.CourierFirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Courier.CourierLastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Courier.CourierLastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Courier.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Courier.PhoneNumber)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Courier?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
<br />
<div>
    <h4>Assigned Packages</h4>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>Weight</th>
                <th>Status</th>
                <th>Sender</th>
                <th>Receiver</th>
                <th>Address</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var package in Model.AssignedPackages)
            {
                <tr>
                    <td>@package.Weight</td>
                    <td>@package.Status</td>
                    <td>@package.Sender.FullName</td>
                    <td>@package.Receiver.FullName</td>
                    <td>@package.Receiver.StreetAddress</td>
                </tr>
            }
        </tbody>
    </table>
</div>
